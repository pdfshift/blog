{% extends 'partial/base.njk' %}

{% block content %}
    <div class="home">
        <div class="featured">
            <h4>Featured post</h4>
            <div>
                {% set featured_post = site.posts.first() %}
                <a href="{{ url_for(featured_post.path) }}" title="{{ featured_post.title }}">
                    {% if featured_post.thumbnail %}{{ image_tag(featured_post.thumbnail, {alt: featured_post.title}) }}{% endif %}
                    <h2>{{ featured_post.title }}</h2>
                </a>
            </div>
        </div>
        {% if site.categories.length %}
        <nav>
            <ul>
                {% set parent = {'$exists': false} %}
                <li><a href="{{ config.root }}" title="Most recent">Most recent</a></li>
                {% for category in site.categories.find({'parent': parent}).sort('name').toArray() %}
                <li><a href="{{ url_for(category.path) }}" title="{{ category.name }}">{{ category.name }}</a></li>
                {% endfor %}
            </ul>
        </nav>
        {% endif %}
        <section>
            {% if page.next %}
                <div class="pager">
                    <a href="{{ url_for('/' + config.pagination_dir + '/' + page.next) }}" title="← Back to latest posts">← Back to latest posts</a>
                </div>
            {% endif %}
            <ul>
                {% for post in page.posts.toArray() %}
                <li>
                    <a href="{{ url_for(post.path) }}" title="{{ post.title | replace('<br />', ' ') | striptags }}">
                        <div>
                            <div class="thumbnail">
                                {% if post.thumbnail %}{{ image_tag(post.thumbnail) }}{% endif %}
                            </div>
                            <div class="details">
                                <h2>{{ post.title | replace('<br />', ' ') | striptags }}</h2>
                                <span>Posted on {{ full_date(post.date, "MMM D, YYYY") }}</span>
                                <p>{{ truncate(post.excerpt | striptags, {length: 150, separator: ' '}) }}</p>
                            </div>
                        </div>
                    </a>
                </li>
                {% endfor %}
            </ul>
            {% if page.prev %}
                <div class="pager">
                    <a href="{{ url_for('/' + config.pagination_dir + '/' + page.prev if page.prev > 1 else '/') }}" title="View older posts →">View older posts →</a>
                </div>
            {% endif %}
        </section>
    </div>
{% endblock %}