<!doctype html>
<html lang=en>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        {% if theme.favicon %}<link rel="icon" href="{{ url_for(theme.favicon) }}">{% endif %}
        <title>{{ (page.title + " - " + config.title) if page.title else config.title }}</title>
        <meta name="description" content="{{ page.description if page.description else config.description }}">
        <meta name="author" content="{{ config.author }}">
        <meta name="keywords" content="{{ (page.keywords + "," + config.keywords) if page.keywords else config.keywords }}">
        <link rel="alternate" type="application/rss+xml" title="{{ config.title }}" href="{{ url_for(theme.feed) }}" />
        {% if is_post() %}<link rel="canonical" href="{{ page.permalink }}" />{% endif %}
{% include './head/facebook.njk' %}
{% include './head/twitter.njk' %}

        {% for font in theme.googlefonts %}<link href="https://fonts.googleapis.com/css?family={{ font }}" rel="stylesheet">
        {% endfor %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.min.css" integrity="sha256-oSrCnRYXvHG31SBifqP2PM1uje7SJUyX0nTwO2RJV54=" crossorigin="anonymous" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/milligram/1.3.0/milligram.min.css" integrity="sha256-Ro/wP8uUi8LR71kwIdilf78atpu8bTEwrK5ZotZo+Zc=" crossorigin="anonymous" />
        <link rel="stylesheet" href="{{ url_for('/assets/css/main.css') }}"/>
        {% include './head/google-analytics.njk' %}
    </head>
    <body>
        <header class="container">
            <div class="row">
                <a href="{{ config.root }}" alt="Return to our blog homepage.">PDFShift</a>
                <nav>
                    <ul>
                        {% for menu in theme.menu %}
                        <li><a href="{{ menu.url }}"{% if (menu.class) %} class="{{ menu.class }}"{% endif %}>{{ menu.name }}</a></li>
                        {% endfor %}
                    </ul>
                </nav>
            </div>
        </header>
        <main>
            {% block content %}{% endblock %}
        </main>
    </body>
</html>